<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary">

    <TextView android:id="@+id/quoteTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:fontFamily="@font/roboto"
              android:textAlignment="center"
              android:background="@color/colorPrimary"
              android:textColor="@color/mainTextForeground" android:textSize="25sp"
              android:text="Failure is just another way to learn how to do something right."/>

    <TextView android:id="@+id/authorTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:layout_below="@id/quoteTextView"
              android:layout_alignParentRight="true"
              android:layout_marginRight="12dp"
              android:fontFamily="@font/roboto"
              android:textStyle="italic"
              android:textAlignment="center"
              android:background="@color/colorPrimary"
              android:textColor="@color/mainTextForeground" android:textSize="26sp"
              android:text="Marian Wright Edelman" />

</RelativeLayout>
